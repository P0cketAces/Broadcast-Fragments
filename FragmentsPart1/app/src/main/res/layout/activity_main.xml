<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fragmentspart1.joeynelson.fragmentspart1.MainActivity">

    <TextView
        android:id="@+id/attractionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="This button gives you a list of Chicago attractions."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAttractions" />

    <TextView
        android:id="@+id/restaurantsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="This button gives you a list of Chicago restaurants."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAttractions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="18dp"
        android:text="Attractions"
        app:layout_constraintEnd_toEndOf="@+id/attractionsText"
        app:layout_constraintStart_toStartOf="@+id/restaurantsText"
        app:layout_constraintTop_toBottomOf="@+id/restaurantsText" />

    <Button
        android:id="@+id/btnRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Restaurants"
        app:layout_constraintEnd_toEndOf="@+id/attractionsText"
        app:layout_constraintStart_toStartOf="@+id/attractionsText"
        app:layout_constraintTop_toBottomOf="@+id/attractionsText" />

</android.support.constraint.ConstraintLayout>
